---
import { getRelativeLocaleUrl } from "astro:i18n";
import ChangeLang from "../shared/ChangeLang.astro";

interface Props {
  currLang: string;
}

const currLang = String(Astro.props.currLang || "en") as "en" | "es" | "ru";

const translations = {
  home: {
    en: "Home",
    es: "Inicio",
    ru: "Главная",
  },
  contacts: {
    en: "Contacts",
    es: "Contactos",
    ru: "Контакты",
  },
  about: {
    en: "About",
    es: "Nosotros",
    ru: "О нас",
  },
};
---

<nav>
  <div class="first">
    <a
      title={translations.home[currLang]}
      aria-label={translations.home[currLang]}
      href={getRelativeLocaleUrl(currLang, "/")}
      tabindex="0"
    >
      {translations.home[currLang]}
    </a>
    <a
      title={translations.contacts[currLang]}
      aria-label={translations.contacts[currLang]}
      href={getRelativeLocaleUrl(currLang, "/contacts")}
    >
      {translations.contacts[currLang]}
    </a>
    <a
      title={translations.about[currLang]}
      aria-label={translations.about[currLang]}
      href={getRelativeLocaleUrl(currLang, "/about")}
    >
      {translations.about[currLang]}
    </a>
  </div>

  <ChangeLang />
</nav>

<style lang="scss">
  nav {
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    background-color: var(--header-bg);
  }

  .first {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
  }

  a {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    font-size: 1.2rem;
    &:hover {
      opacity: 0.8;
    }
  }

  .changeLang {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;

    a {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      transition: all 0.1s;

      @media only screen and (max-width: 767px) {
        zoom: 0.8;
      }
      &:hover {
        opacity: 0.7;
      }
    }
  }
</style>
