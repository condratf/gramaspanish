---
import { getRelativeLocaleUrl } from "astro:i18n";
import ChangeLang from "src/components/shared/ChangeLang.astro";
import { getCurrLang } from "src/helpers";
import { getHeaderItems } from "src/resources/header";

const currLang = getCurrLang(Astro);
const headerItems = getHeaderItems();
---

<nav>
  <div class="headerItems">
    {
      Object.values(headerItems).map(({ translations, href }) => (
        <a
          title={translations[currLang]}
          aria-label={translations[currLang]}
          href={getRelativeLocaleUrl(currLang, href)}
          tabindex="0"
        >
          {translations[currLang]}
        </a>
      ))
    }
  </div>

  <ChangeLang />
</nav>

<style lang="scss">
  nav {
    padding: 1.3rem;
    padding-bottom: 1.5rem;
    display: flex;
    justify-content: space-between;
    background-color: var(--header-bg);
    box-shadow: 1px 7px 12px 2px rgba(0,0,0,0.12);
  }

  .headerItems {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
  }

  a {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    font-size: 1.2rem;
    &:hover {
      opacity: 0.8;
    }
  }
</style>
