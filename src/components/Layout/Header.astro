---
import ChangeLang from "src/components/shared/ChangeLang.astro";
import { getHeaderItems } from "src/resources/header";
import type { Lang } from "src/types";

const currLang = (Astro.currentLocale || "en") as Lang;
const headerItems = getHeaderItems();
---

<nav>
  <div class="headerItems">
    {
      Object.values(headerItems).map(({ translations, href }) => (
        <a
          title={translations[currLang]}
          aria-label={translations[currLang]}
          href={`/${currLang}${href}`}
          tabindex="0"
          data-astro-prefetch
        >
          {translations[currLang]}
        </a>
      ))
    }
  </div>

  <ChangeLang />
</nav>

<style lang="scss">
  nav {
    padding: 1.3rem;
    padding-bottom: 1.5rem;
    display: flex;
    justify-content: space-between;
    background-color: var(--header-bg);
    box-shadow: 1px 7px 12px 2px rgba(0,0,0,0.12);
  }

  .headerItems {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
  }

  a {
    text-decoration: none;
    color: var(--light-purple);
    cursor: pointer;
    font-size: 1.2rem;
    opacity: 0.9;
    &:hover {
      opacity: 1;
    }
  }
</style>
