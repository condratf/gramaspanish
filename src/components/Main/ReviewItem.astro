---
import { getRatingStars } from "src/helpers";
import type { Review } from "src/resources/reviews";

interface Props {
  item: Promise<Review>
}

// const { content, name, rating, imgSrc } = await Astro.props.item;
---

<div class="container">
  <img alt="alumno" src={(await Astro.props.item).imgSrc} width="190" height="190" />
  <div>
    <h3>{(await Astro.props.item).name}</h3>
    <p>
      {(await Astro.props.item).content}
    </p>

    <span>
      {getRatingStars((await Astro.props.item).rating)}
    </span>
  </div>
</div>

<style lang="scss">
  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    border: 1px solid rgba(137, 137, 137, 0.372);
    box-shadow: -1px 10px 16px -6px rgba(0, 0, 0, 0.1);
    border-radius: 1rem;
    padding: 0.5rem;
    min-width: 25rem;
    margin-bottom: 0.9rem;

    @media (max-width: 500px) {
      min-width: 23rem;
      gap: 0.7rem;
    }

    img {
      border-radius: 0.5rem;
      max-width: 150px;
    }

    @media (max-width: 380px) {
      min-width: 17.3rem;
      gap: 0.5rem;
      img {
        max-width: 110px;
        max-height: 110px;
        margin-right: 1rem;
      }
      p {
        font-size: 0.7rem;
      }
    }
  }
</style>
