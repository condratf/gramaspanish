<style lang="scss">
  .wrapper-container {
    background-color: var(--complimentary);
  }

  .container {
    max-width: 1300px;
    margin: 0 auto;
    background-color: var(--complimentary);
    padding: 5rem 0;
    display: flex;
    gap: 8vw;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;

    @media (max-width: 500px) {
      padding-top: 10rem;
      gap: 1rem;
      padding-left: 0.7rem;
      padding-bottom: 5.9rem;
    }
  }

  .custom-shape-divider-bottom-1716118163 {
